<!-- development version, includes helpful console warnings 
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>-->
<script>
	!function ($) {

		function setupSettings() {
			if (typeof BLACKBAUD.api.customPartEditor.settings.heading == 'undefined' ||
				typeof BLACKBAUD.api.customPartEditor.settings.headingColor == 'undefined' ||
				typeof BLACKBAUD.api.customPartEditor.settings.subHeading == 'undefined' ||
				typeof BLACKBAUD.api.customPartEditor.settings.subHeadingColor == 'undefined' ||
				typeof BLACKBAUD.api.customPartEditor.settings.height == 'undefined' ||
                typeof BLACKBAUD.api.customPartEditor.settings.campaignText == 'undefined' ||
				typeof BLACKBAUD.api.customPartEditor.settings.image == 'undefined') {
				BLACKBAUD.api.customPartEditor.settings = {
					heading: '',
					headingColor: '',
					subHeading: '',
					subHeadingColor: '',
					height: '',
                  	campaignText: '',
					image: {
						url: ''
					}
				}
			}
          	console.log(BLACKBAUD.api.customPartEditor.settings);
		}
      
		function bindImagePicker() {
			if (!BLACKBAUD.api.customPartEditor.images.canLaunchImagePicker) {
				$('.error-permission').show();
			} else {
				$('a.ImagePicker').click(function (e) {
					e.preventDefault();
					BLACKBAUD.api.customPartEditor.images.launchImagePicker({
						callback: renderImage
					});
				});
			}
		}

		function bindSave() {
			BLACKBAUD.api.customPartEditor.onSave = function () {
				var success = true;

				$('.error-validation').hide();
				$('[data-validate]').each(function () {
					var element = $(this);
					if (element.val() == '') {
						$(element.data('validate')).show();
						success = false;
					}
				});

				// Save text
				BLACKBAUD.api.customPartEditor.settings.heading = $('#field-highlighter-heading').val();
				BLACKBAUD.api.customPartEditor.settings.subHeading = $('#field-highlighter-subHeading').val();
				BLACKBAUD.api.customPartEditor.settings.headingColor = $('#field-highlighter-headingColor').val();
				BLACKBAUD.api.customPartEditor.settings.subHeadingColor = $('#field-highlighter-subHeadingColor').val();
				BLACKBAUD.api.customPartEditor.settings.height = $('#field-highlighter-height').val();
              	BLACKBAUD.api.customPartEditor.settings.campaignText = $('#field-highlighter-campaignText').val();

				return success;
			}
		}

		function renderText() {
			$('#field-highlighter-heading').val(BLACKBAUD.api.customPartEditor.settings.heading);
			$('#field-highlighter-subHeading').val(BLACKBAUD.api.customPartEditor.settings.subHeading);
			$('#field-highlighter-headingColor').val(BLACKBAUD.api.customPartEditor.settings.headingColor);
			$('#field-highlighter-subHeadingColor').val(BLACKBAUD.api.customPartEditor.settings.subHeadingColor);
			$('#field-highlighter-height').val(BLACKBAUD.api.customPartEditor.settings.height);
          	$('#field-highlighter-campaignText').val(BLACKBAUD.api.customPartEditor.settings.campaignText);
		}

		function renderImage(o) {
			if (typeof o.name != 'undefined' && o.url != 'undefined') {
				$('.ImagePicker .SearchFieldText').text(o.name);
				$('.ImagePickerRender').html('<img alt="" src="' + o.url + '" />');
				$('#field-highlighter-image-name').val(o.name);
				$('#field-highlighter-image-url').val(o.url);
			}
			BLACKBAUD.api.customPartEditor.settings.image = o;
		}

		$(function () {
			setupSettings();
			bindImagePicker();
			bindSave();
			renderText();
			renderImage(BLACKBAUD.api.customPartEditor.settings.image);
		});

		$('select').on('change', function () {
			BLACKBAUD.api.customPartEditor.settings.headingColor = $('#field-highlighter-headingColor').val();
			BLACKBAUD.api.customPartEditor.settings.subHeadingColor = $('#field-highlighter-subHeadingColor').val();
		});

	}(jQuery);
</script>

<style>
	.error {
		display: none;
		color: #FF0000;
		font-weight: bold;
	}
</style>

<div>
	<ul>
		<li class="error error-permission">You do not have permission to launch the image picker.</li>
		<li class="error error-validation error-heading">Heading is required.</li>
		<li class="error error-validation error-height">Height is required.</li>
      	<li class="error error-validation error-campaignText">Campaign Text is required.</li>
		<li class="error error-validation error-image">Image is required.</li>
	</ul>
</div>

