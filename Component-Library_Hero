					<select id="field-highlighter-headingColor">
						<option value="000">Black</option>
						<option value="e00122">Red</option>
						<option value="fff">White</option>
					</select>
				</div>
			</div>

			<div class="Field">
				<div class="FieldHeading">
					<label for="field-highlighter-subHeading" class="FieldLabel">Subheading:</label>
					<span class="clear"></span>
				</div>
				<div class="FieldContentText">
					<input type="text" id="field-highlighter-subHeading" class="FieldSelect FieldInput"  />
				</div>
			</div>

			<div class="Field">
				<div class="FieldHeading">
					<label for="field-highlighter-subHeadingColor" class="FieldLabel">Subheading Color</label>
					<span class="FieldRequired">*</span>
					<span class="clear"></span>
				</div>
				<div class="FieldContentText">
					<select id="field-highlighter-subHeadingColor">
						<option value="000">Black</option>
						<option value="e00122">Red</option>
						<option value="fff">White</option>
					</select>
				</div>
			</div>

			<div class="Field">
				<div class="FieldHeading">
					<label for="field-highlighter-height" class="FieldLabel">Height (%):</label>
					<span class="FieldRequired">*</span>
					<span class="clear"></span>
				</div>
				<div class="FieldContentText">
					<input type="text" id="field-highlighter-height" class="FieldSelect FieldInput"
						data-validate=".error-height" />
				</div>
			</div>

          	<div class="Field">
				<div class="FieldHeading">
					<label for="field-highlighter-campaignText" class="FieldLabel">Campaign Text:</label>
					<span class="FieldRequired">*</span>
					<span class="clear"></span>
				</div>
				<div class="FieldContentText">
					<input type="text" id="field-highlighter-campaignText" class="FieldSelect FieldInput"
						data-validate=".error-campaignText" />
				</div>
			</div>
			

			<div class="Field">
				<div class="FieldHeading">
					<label for="field-highlighter-image" class="FieldLabel">Image:</label>
					<span class="FieldRequired">*</span>
					<span class="clear"></span>
				</div>
				<div class="FieldContent">
					<div class="SearchFieldContainer">
						<div class="SearchFieldBox">
							<a href="#" class="SearchField ImagePicker">
								<span class="SearchFieldIcon">
									<img src="/images/pencil_16.gif" alt="" />
								</span>
								<span class="SearchFieldText"></span>
								<span class="SearchFieldButton">
									<img src="/images/Admin/Buttons/search.gif" alt="" />
								</span>
							</a>
						</div>
					</div>
				</div>
			</div>
			<div class="Field ImagePickerRender"></div>
		</div>
	</div>
</div>
